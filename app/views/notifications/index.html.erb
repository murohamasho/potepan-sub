<h3 class="text-center">Notices</h3>
    <%= link_to destroy_all_notifications_path, method: :delete do %>
        <i class="fa fa-trash" aria-hidden="true" style="color: black;"></i>
        <h7 style="color: black;">delete all</h7>
    <% end %>
    <hr>
<% if @notifications.exists? %>
    <div class="users-index col-md-offset-3">
        <%= render @notifications %>
    </div>
<% else %>
    <p>No notification</p>
<% end %>